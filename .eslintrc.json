{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"jQuery": "readonly",
		"BS": "readonly",
		"bs": "readonly",
		"mediaWiki": "readonly",
		"enhancedUpload": "readonly",
		"ve": "readonly",
		"OOJSPlus": "readonly",
		"blueSpice": "readonly",
		"QUnit": "readonly"
	},
	"rules": {
		"es-x/no-array-prototype-includes": "off",
		"max-len": "off",
		"no-jquery/no-done-fail": "warn",
		"mediawiki/no-unlabeled-buttonwidget": "warn"
	},
	"env": {
		"browser": true,
		"es6": true
	}
}
